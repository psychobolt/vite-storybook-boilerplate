{
  "ts-node": {
    "esm": true,
    "files": true,
    "swc": true
  },
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "sourceMap": true
  },
  "include": ["**/*"],
  "exclude": ["apps", "packages"],
  "references": [{ "path": "./packages/commons/tsconfig.json" }]
}
