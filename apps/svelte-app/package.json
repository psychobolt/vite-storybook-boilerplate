{
	"name": "svelte-app",
	"private": true,
	"type": "module",
	"packageManager": "yarn@4.10.3",
	"scripts": {
		"dotenv-run": "yarn dotenvx run -q --ignore=MISSING_ENV_FILE -f ../../.env.defaults -f ../../.env -f .env.defaults -f .env --overload",
		"swc-register-path": "yarn node -p \"path.join(require.resolve('@swc-node/register'), '../esm/esm.mjs')\"",
		"run-script": "cd $INIT_CWD && yarn dotenv-run --env=\"TS_NODE_PROJECT=$INIT_CWD/tsconfig.json\" --env=\"ESM_REGISTER=file://$(yarn swc-register-path)\" -- node --enable-source-maps --import file://$(yarn node -p \"path.join(process.env.PROJECT_CWD, '../../bin/esm-register.js')\")",
		"vite": "yarn run-script $(yarn bin vite)",
		"dev": "yarn vite dev --open",
		"build": "yarn vite build",
		"preview": "yarn vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "yarn check --watch",
		"prettier": "prettier --ignore-path ../../.gitignore --ignore-path ../../packages/commons/.prettierignore --ignore-path ./.gitignore --ignore-path ./.prettierignore",
		"lint": "yarn prettier --check . && stylelint **/*.{sc,c}ss && yarn check && lint --runner eslint",
		"format": "yarn prettier --write $(echo \"${@:-.}\")",
		"mcp:eslint": "yarn run-script $(yarn node -p \"require.resolve('@eslint/mcp/src/mcp-cli.js')\")"
	},
	"devDependencies": {
		"@dotenvx/dotenvx": "1.51.0",
		"@eslint/js": "9.37.0",
		"@eslint/mcp": "0.1.1",
		"@fontsource/fira-mono": "5.2.7",
		"@neoconfetti/svelte": "2.2.2",
		"@sveltejs/adapter-auto": "6.1.1",
		"@sveltejs/adapter-vercel": "6.0.0",
		"@sveltejs/kit": "2.47.0",
		"@sveltejs/vite-plugin-svelte": "6.2.1",
		"@swc-node/register": "1.10.0",
		"@swc/core": "1.13.3",
		"@types/eslint": "9.6.1",
		"@types/eslint-config-prettier": "6.11.3",
		"@types/node": "22.18.10",
		"@typescript-eslint/utils": "8.46.1",
		"arg": "5.0.2",
		"commons": "workspace:*",
		"eslint": "9.37.0",
		"eslint-config-prettier": "10.1.8",
		"eslint-plugin-svelte": "3.12.4",
		"globals": "16.4.0",
		"html-ui": "workspace:*",
		"jiti": "2.6.1",
		"kleur": "4.1.5",
		"postcss": "8.5.6",
		"prettier": "3.6.2",
		"prettier-plugin-svelte": "3.4.0",
		"sass": "1.93.2",
		"stylelint": "16.25.0",
		"stylelint-config-prettier-scss": "1.0.0",
		"stylelint-config-standard-scss": "16.0.0",
		"svelte": "5.40.1",
		"svelte-check": "4.3.3",
		"svelte-eslint-parser": "1.3.3",
		"svelte-language-server": "0.17.21",
		"tslib": "2.8.1",
		"turbo": "2.5.8",
		"typescript": "5.9.3",
		"typescript-eslint": "8.46.1",
		"vite": "7.1.10"
	},
	"resolutions": {
		"@swc-node/register@1.10.0": "patch:@swc-node/register@npm%3A1.10.0#../../.yarn/patches/@swc-node-register-npm-1.10.0-3e68312da5.patch",
		"commons": "portal:../../packages/commons",
		"html-ui": "portal:../../packages/html-ui"
	}
}
