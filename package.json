{
  "name": "vite-storybook-boilerplate",
  "private": true,
  "type": "module",
  "packageManager": "yarn@3.5.1",
  "scripts": {
    "ts-loader-path": "yarn node -p \"require.resolve('ts-node/esm')\"",
    "ts-script": "yarn g:ts-script",
    "g:ts-script": "cd $INIT_CWD && cross-env TS_NODE_PROJECT=${PROJECT_CWD}/tsconfig.json node --loader file://$(yarn run -T ts-loader-path) --loader file://${PROJECT_CWD}/.pnp.loader.mjs",
    "turbo": "yarn ts-script scripts/turbo.ts",
    "ls-workspaces": "yarn ts-script scripts/ls-workspaces.ts",
    "bootstrap": "yarn g:bootstrap",
    "g:bootstrap": "yarn ts-script ./scripts/bootstrap.ts && yarn workspace commons turbo run build",
    "dev": "yarn run turbo --background run dev",
    "build": "yarn run turbo run build",
    "eslint-path": "yarn bin eslint",
    "lint": "yarn g:prettier --check . && yarn g:lint-js .",
    "g:lint-js": "cd $INIT_CWD && cross-env ESLINT_USE_FLAT_CONFIG=true yarn g:ts-script $(yarn run -T eslint-path) -c ${INIT_CWD}/eslint.config.ts .",
    "g:lint-css": "cd $INIT_CWD && stylelint --ignore-path .gitignore ${INIT_CWD}/**/*.{sc,c}ss",
    "format": "yarn g:prettier --write .",
    "g:prettier": "cd $INIT_CWD && prettier --ignore-path ${PROJECT_CWD}/.gitignore --ignore-path ./.prettierignore"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@types/glob-to-regexp": "0.4.1",
    "@types/node": "18.16.16",
    "@yarnpkg/sdks": "3.0.0-rc.44",
    "arg": "5.0.2",
    "commons": "workspace:*",
    "cross-env": "7.0.3",
    "eslint": "8.41.0",
    "execa": "7.1.1",
    "glob-to-regexp": "0.4.1",
    "playwright-chromium": "1.34.3",
    "prettier": "3.0.0-alpha.9-for-vscode",
    "sb": "7.0.18",
    "stylelint": "15.6.2",
    "ts-node": "10.9.1",
    "turbo": "1.9.9",
    "typescript": "5.0.4"
  },
  "dependenciesMeta": {
    "ts-node@10.9.1": {
      "unplugged": true
    }
  },
  "resolutions": {
    "esbuild-register": "workspace:*"
  }
}
