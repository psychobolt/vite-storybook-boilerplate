{
  "name": "vite-storybook-boilerplate",
  "private": true,
  "type": "module",
  "packageManager": "yarn@3.6.4",
  "scripts": {
    "postinstall": "husky install",
    "g:dotenv": "cd $INIT_CWD && dotenv -e $PROJECT_CWD/.env -e $INIT_CWD/.env -c",
    "g:dotenv-vault": "cd $INIT_CWD && dotenv-vault",
    "ts-loader-path": "yarn node -p \"require.resolve('ts-node/esm')\"",
    "ts-script": "yarn g:ts-script",
    "g:ts-script": "cd $INIT_CWD && dotenv -e $PROJECT_CWD/.env -c -- node --loader file://$(yarn run -T ts-loader-path) --loader file://$PROJECT_CWD/.pnp.loader.mjs",
    "turbo": "yarn ts-script scripts/turbo.ts",
    "ls-workspaces": "yarn ts-script scripts/ls-workspaces.ts",
    "bootstrap": "yarn g:bootstrap",
    "g:bootstrap": "yarn ts-script ./scripts/bootstrap.ts && yarn workspace commons turbo run build",
    "dev": "yarn turbo --background run dev",
    "build": "yarn turbo run build",
    "eslint-path": "yarn bin eslint",
    "lint": "yarn g:prettier --check . && yarn g:lint-js",
    "g:lint-js": "cd $INIT_CWD && yarn g:ts-script $(yarn run -T eslint-path) -c ./eslint.config.ts .",
    "g:lint-css": "cd $INIT_CWD && stylelint --ignore-path $PROJECT_CWD/.gitignore \"**/*.{sc,c}ss\"",
    "format": "yarn g:prettier --write .",
    "g:prettier": "cd $INIT_CWD && prettier --ignore-path $PROJECT_CWD/.gitignore --ignore-path ./.prettierignore"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@types/glob-to-regexp": "0.4.3",
    "@types/node": "20.8.8",
    "@yarnpkg/sdks": "3.0.0",
    "arg": "5.0.2",
    "commons": "workspace:*",
    "dotenv-cli": "7.3.0",
    "dotenv-flow": "4.0.0",
    "dotenv-vault": "1.25.0",
    "eslint": "8.52.0",
    "execa": "8.0.1",
    "glob-to-regexp": "0.4.1",
    "husky": "8.0.3",
    "playwright-chromium": "1.39.0",
    "prettier": "3.0.3",
    "sb": "7.4.6",
    "stylelint": "15.11.0",
    "ts-node": "10.9.1",
    "turbo": "1.10.16",
    "typescript": "5.2.2",
    "yaml": "2.3.3"
  },
  "dependenciesMeta": {
    "ts-node@10.9.1": {
      "unplugged": true
    }
  },
  "resolutions": {
    "dotenv-cli@7.3.0": "patch:dotenv-cli@npm%3A7.3.0#./.yarn/patches/dotenv-cli-npm-7.3.0-7b0ff066d1.patch",
    "dotenv-flow@4.0.0": "patch:dotenv-flow@npm%3A4.0.0#./.yarn/patches/dotenv-flow-npm-4.0.0-b94c2c110d.patch"
  }
}
