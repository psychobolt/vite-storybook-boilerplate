{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "platform": "bitbucket",
  "enabledManagers": ["bitbucket-pipelines"],
  "automerge": true,
  "packageRules": [
    {
      "matchPackageNames": ["stylelint"],
      "allowedVersions": "<16"
    },
    {
      "matchPackageNames": ["stylelint-config-standard-scss"],
      "allowedVersions": "<13"
    },
    {
      "matchPackageNames": [
        "@dotenvx/dotenvx",
        "@swc-node/register",
        "dotenv-vault"
      ],
      "automerge": false
    }
  ]
}
