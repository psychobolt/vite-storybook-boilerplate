{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "enabledManagers": ["bitbucket-pipelines"],
  "automerge": true,
  "constraints": {
    "node": "^18"
  },
  "packageRules": [
    {
      "matchPackageNames": ["vite", "postcss"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Vite and PostCSS (non-major)"
    }
  ]
}
