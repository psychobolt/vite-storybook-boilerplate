{
  "ts-node": {
    "esm": true,
    "files": true,
    "swc": true
  },
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [".storybook/**/*", "**/*"],
  "exclude": ["cjs", "esm"]
}
