{
  "name": "commons",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "bootstrap": "yarn g:bootstrap",
    "build": "yarn build-esm && yarn build-cjs",
    "build-esm": "rimraf esm/ && tsc && tsc --project tsconfig.dts.json",
    "build-cjs": "rimraf cjs/ && tsc --project tsconfig.cjs.json && tsconfig-to-dual-package tsconfig.cjs.json",
    "g:test-storybook": "test-storybook -c ${INIT_CWD}/.storybook",
    "lint": "yarn g:prettier --check . && yarn g:lint-js",
    "format": "yarn g:prettier --write ."
  },
  "dependencies": {
    "@eslint/eslintrc": "2.1.2",
    "@storybook/addon-coverage": "0.0.8",
    "@storybook/addon-essentials": "7.2.1",
    "@storybook/addon-interactions": "7.2.1",
    "@storybook/addon-links": "7.2.1",
    "@storybook/builder-vite": "7.2.1",
    "@storybook/test-runner": "0.13.0",
    "@storybook/types": "7.2.1",
    "@tsconfig/recommended": "1.0.3",
    "@types/eslint": "8.44.3",
    "@types/node": "18.18.0",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "8.50.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard-jsx": "11.0.0",
    "eslint-config-standard-react": "13.0.0",
    "eslint-config-standard-with-typescript": "35.0.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-mdx": "2.2.0",
    "eslint-plugin-n": "16.1.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "playwright": "1.38.1",
    "playwright-chromium": "1.38.1",
    "postcss": "8.4.30",
    "postcss-scss": "4.0.8",
    "prettier": "2.8.8",
    "prettier-config-standard": "5.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "5.0.4",
    "stylelint": "15.10.3",
    "stylelint-config-prettier-scss": "1.0.0",
    "stylelint-config-standard-scss": "11.0.0",
    "tsconfig-to-dual-package": "1.2.0",
    "typescript": "5.2.2",
    "vite": "4.4.9",
    "vite-plugin-turbosnap": "1.0.3"
  },
  "devDependencies": {
    "turbo": "1.10.14"
  }
}
