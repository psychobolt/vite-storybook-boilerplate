{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "inputs": [
        ".yarn/versions/**",
        "**/*.ts",
        "**/*.json",
        "!.turbo",
        "!cjs",
        "!esm"
      ],
      "outputs": ["esm/**", "cjs/**"]
    },
    "lint": {
      "dependsOn": ["build"]
    },
    "format": {
      "dependsOn": ["build"]
    }
  }
}
