{
  "name": "html-ui",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.1.1",
  "exports": {
    "./*.css": "./dist/*.css"
  },
  "scripts": {
    "prepack": "yarn turbo run build",
    "dev": "yarn watch & yarn g:storybook dev -p $(yarn g:dotenv -p PORT)",
    "build": "vite build",
    "watch": "yarn build -w",
    "build-storybook": "yarn g:storybook build --stats-json",
    "start": "yarn g:dotenv -- http-server storybook-static",
    "test": "yarn g:test-storybook --index-json",
    "coverage": "yarn g:rimraf coverage/ && yarn test --coverage",
    "lcov": "nyc report --reporter=lcov -t coverage/storybook --report-dir coverage/storybook",
    "lint": "yarn g:prettier --check . && yarn g:lint-css && yarn g:lint-js",
    "format": "yarn g:prettier --write .",
    "chromatic": "yarn g:dotenv -- chromatic"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "8.0.2",
    "@storybook/blocks": "8.0.2",
    "@storybook/test": "8.0.2",
    "@storybook/web-components": "8.0.2",
    "@storybook/web-components-vite": "8.0.2",
    "chromatic": "11.2.0",
    "commons": "workspace:*",
    "glob": "10.3.10",
    "http-server": "14.1.1",
    "lit": "3.1.2",
    "nyc": "15.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sass": "1.72.0",
    "turbo": "1.12.5",
    "typescript": "5.4.3",
    "typescript-plugin-css-modules": "5.1.0",
    "vite": "5.2.2"
  }
}
