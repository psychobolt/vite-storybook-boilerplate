{
  "name": "html-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    },
    "./style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "scripts": {
    "bootstrap": "yarn g:bootstrap",
    "dev": "yarn watch & storybook dev",
    "build": "vite build",
    "watch": "yarn build -w",
    "build-storybook": "storybook build",
    "start": "turbo run build-storybook && http-server storybook-static",
    "test": "test-storybook",
    "lcov": "nyc report --reporter=lcov -t coverage/storybook --report-dir coverage/storybook",
    "lint": "yarn g:lint",
    "chromatic": "chromatic -d storybook-static --only-changed"
  },
  "devDependencies": {
    "@babel/core": "7.21.4",
    "@storybook/addon-coverage": "0.0.8",
    "@storybook/addon-essentials": "7.0.8",
    "@storybook/addon-interactions": "7.0.8",
    "@storybook/addon-links": "7.0.8",
    "@storybook/blocks": "7.0.8",
    "@storybook/builder-vite": "7.0.9",
    "@storybook/html": "7.0.8",
    "@storybook/html-vite": "7.0.8",
    "@storybook/test-runner": "0.11.0-next.0",
    "@storybook/testing-library": "0.1.0",
    "chromatic": "6.17.3",
    "commons": "workspace:*",
    "http-server": "14.1.1",
    "nyc": "15.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "storybook": "7.0.8",
    "turbo": "1.9.3",
    "typescript": "5.0.4",
    "vite": "4.3.4"
  }
}
