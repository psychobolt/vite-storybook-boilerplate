{
  "name": "html-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "yarn@3.6.4",
  "files": [
    "dist"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    },
    "./style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "scripts": {
    "bootstrap": "yarn g:bootstrap",
    "dev": "yarn watch & storybook dev",
    "build": "vite build",
    "watch": "yarn build -w",
    "build-storybook": "storybook build",
    "start": "turbo run build-storybook && http-server storybook-static",
    "test": "yarn g:test-storybook",
    "lcov": "nyc report --reporter=lcov -t coverage/storybook --report-dir coverage/storybook",
    "lint": "yarn g:prettier --check . && yarn g:lint-css && yarn g:lint-js",
    "format": "yarn g:prettier --write .",
    "chromatic": "chromatic -d storybook-static --only-changed"
  },
  "devDependencies": {
    "@babel/core": "7.23.0",
    "@storybook/addon-essentials": "7.4.5",
    "@storybook/blocks": "7.4.5",
    "@storybook/builder-vite": "7.4.5",
    "@storybook/html": "7.4.5",
    "@storybook/html-vite": "7.4.5",
    "@storybook/testing-library": "0.2.2",
    "chromatic": "7.2.0",
    "commons": "workspace:*",
    "http-server": "14.1.1",
    "nyc": "15.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "storybook": "7.4.5",
    "turbo": "1.10.14",
    "typescript": "5.2.2",
    "vite": "4.4.10"
  }
}
