{
  "name": "react-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "yarn@3.6.0",
  "files": [
    "dist"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    },
    "./style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "bootstrap": "yarn g:bootstrap",
    "dev": "yarn watch & storybook dev",
    "build": "yarn build-src && yarn build-dts",
    "watch": "yarn build-src -w & yarn build-dts --watch",
    "build-src": "vite build",
    "build-dts": "tsc --project tsconfig.dts.json",
    "build-storybook": "storybook build",
    "start": "turbo run build-storybook && http-server storybook-static",
    "test": "test-storybook",
    "coverage": "rimraf coverage/ && yarn test --coverage",
    "lcov": "nyc report --reporter=lcov -t coverage/storybook --report-dir coverage/storybook",
    "lint": "yarn g:prettier --check . && yarn g:lint-css && yarn g:lint-js",
    "format": "yarn g:prettier --write .",
    "chromatic": "chromatic -d storybook-static --only-changed"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "7.0.21",
    "@storybook/blocks": "7.0.21",
    "@storybook/react": "7.0.21",
    "@storybook/react-vite": "7.0.21",
    "@storybook/test-runner": "0.11.0-next.0",
    "@storybook/testing-library": "0.1.0",
    "@tsconfig/vite-react": "2.0.0",
    "@types/react": "18.2.12",
    "@types/react-dom": "18.2.5",
    "chromatic": "6.19.7",
    "commons": "workspace:*",
    "http-server": "14.1.1",
    "nyc": "15.1.0",
    "storybook": "7.0.21",
    "turbo": "1.10.3",
    "typescript": "5.1.3",
    "typescript-plugin-css-modules": "5.0.1",
    "vite": "4.3.9"
  }
}
