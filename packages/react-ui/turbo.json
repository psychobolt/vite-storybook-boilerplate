{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "start": {
      "dependsOn": ["build-storybook"]
    },
    "build": {
      "outputs": ["dist/**"]
    },
    "test": {
      "persistent": true
    },
    "coverage": {
      "dependsOn": ["^build"],
      "outputs": ["test-reports/junit.xml", "coverage/**"]
    }
  }
}
