{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "//#bootstrap": {
      "cache": false,
      "dependsOn": []
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build"]
    },
    "build-storybook": {
      "outputs": ["storybook-static/**"],
      "dependsOn": ["^build"]
    },
    "test": {},
    "//#lint": {
      "inputs": ["**/*", "!packages/**", "!apps/**"]
    },
    "lcov": {
      "inputs": ["coverage/coverage.json", "coverage/coverage-*.json"],
      "outputs": ["coverage/**/lcov.info", "coverage/**/lcov-report/**"]
    },
    "chromatic": {
      "inputs": ["storybook-static/**"],
      "dependsOn": ["build-storybook"]
    }
  }
}
