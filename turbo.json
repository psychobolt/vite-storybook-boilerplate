{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["package.json", "bin/turbo.ts"],
  "pipeline": {
    "start": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build"]
    },
    "build-storybook": {
      "outputs": ["storybook-static/**"],
      "dependsOn": ["^build"]
    },
    "//#config-ci": {
      "env": ["CI"],
      "inputs": [
        "!**/node_modules",
        "**/.yarn/patches/**",
        "**/yarn.lock",
        "bitbucket-pipelines.yml"
      ],
      "outputs": ["bitbucket-pipeline.yml"],
      "dependsOn": ["^build"]
    },
    "//#lint": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {},
    "coverage": {},
    "lcov": {
      "inputs": ["coverage/coverage.json", "coverage/coverage-*.json"],
      "outputs": ["coverage/**/lcov.info", "coverage/**/lcov-report/**"]
    },
    "//#format": {
      "dependsOn": ["^build"]
    },
    "format": {
      "dependsOn": ["^build"]
    },
    "chromatic": {
      "inputs": ["storybook-static/**"],
      "dependsOn": ["build-storybook"]
    }
  }
}
