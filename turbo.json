{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "//#bootstrap": {
      "cache": false
    },
    "start": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build"]
    },
    "build-storybook": {
      "outputs": ["storybook-static/**"],
      "dependsOn": ["^build"]
    },
    "//#config-ci": {
      "env": ["CI"],
      "inputs": [
        "**/.yarn/patches/**",
        "**/yarn.lock",
        "templates/bitbucket-pipelines.yml"
      ],
      "outputs": ["bitbucket-pipeline.yml"]
    },
    "config-ci": {},
    "//#lint": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {},
    "coverage": {},
    "lcov": {
      "inputs": ["coverage/coverage.json", "coverage/coverage-*.json"],
      "outputs": ["coverage/**/lcov.info", "coverage/**/lcov-report/**"]
    },
    "//#format": {},
    "format": {},
    "chromatic": {
      "inputs": ["storybook-static/**"],
      "dependsOn": ["build-storybook"]
    }
  }
}
