{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["RUNNER_OS"],
  "tasks": {
    "start": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build"]
    },
    "build-storybook": {
      "outputs": ["storybook-static/**"],
      "dependsOn": ["^build"]
    },
    "//#lint": {
      "env": ["BITBUCKET_CLONE_DIR", "BITBUCKET_REPO_SLUG"],
      "dependsOn": ["^build"],
      "outputs": ["*-report.json", "*-annotations.json"]
    },
    "lint": {
      "env": ["BITBUCKET_CLONE_DIR", "BITBUCKET_REPO_SLUG"],
      "dependsOn": ["^build"],
      "outputs": ["*-report.json", "*-annotations.json"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "coverage": {},
    "//#format": {
      "dependsOn": ["^build"]
    },
    "format": {
      "dependsOn": ["^build"]
    },
    "chromatic": {
      "env": ["DOTENV_PRIVATE_KEY_CI", "CHROMATIC_PROJECT_TOKEN"],
      "inputs": ["storybook-static/**"],
      "dependsOn": ["build-storybook"]
    }
  }
}
