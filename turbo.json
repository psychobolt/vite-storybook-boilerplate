{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["RUNNER_OS"],
  "tasks": {
    "start": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build"]
    },
    "build-storybook": {
      "outputs": ["storybook-static/**"],
      "dependsOn": ["^build"]
    },
    "//#lint": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {},
    "coverage": {},
    "lcov": {
      "inputs": ["coverage/coverage.json", "coverage/coverage-*.json"],
      "outputs": ["coverage/**/lcov.info", "coverage/**/lcov-report/**"]
    },
    "//#format": {
      "dependsOn": ["^build"]
    },
    "format": {
      "dependsOn": ["^build"]
    },
    "chromatic": {
      "env": ["DOTENV_KEY", "CHROMATIC_PROJECT_TOKEN"],
      "inputs": ["storybook-static/**"],
      "dependsOn": ["build-storybook"]
    }
  }
}
